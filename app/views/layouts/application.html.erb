<!DOCTYPE html>
<html>
<head>
  <title>LINKeep</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">

		<div id="header">
			<%= link_to(image_tag("linkeepLogoSmall.png"), :action => 'index', :id =>@index) %>
